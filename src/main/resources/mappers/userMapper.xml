<?xml version="1.0" encoding="UTF-8"?>

  <!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
  <mapper namespace="com.ghfkd1235.spring.ex.user.dao.UserDAO">
  
  	<insert id="insertUser" parameterType="map">
  		INSERT INTO
  			`user`
  		(	
  			`loginId`
  			, `password`
  			, `name`
  			, `email`
  			, `createdAt`
  			, `updatedAt`
  		)
  		VALUES
  		(
			#{loginId}
			,#{password}
			,#{name}
			,#{email}
			,now()
			,now()  		
  		)
  	</insert>
  	
  	<select id="selectUser" parameterType="map"
  		resultType="com.ghfkd1235.spring.ex.user.model.User">
  	
  		SELECT
  			`id`
  			, `loginId`
  			, `password`
  			, `name`
  			, `email`
  			, `createdAt`
  			, `updatedAt`
  		FROM
  			`user`
  		WHERE
  			`loginId` = #{loginId}
  			AND
  			`password` = #{password}
  			
  	</select>
  	
  	<select id="selectCountloginId" parameterType="String" resultType="int">
  		SELECT
  			count(1)
  		FROM
  			`user`
  		WHERE
  			`loginId` = #{loginId}
  	</select>
  
  
  </mapper>